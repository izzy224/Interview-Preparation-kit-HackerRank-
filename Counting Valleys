#include <bits/stdc++.h>

using namespace std;

int countingValleys(int n, string s) {
    int pos=0,res=0;
for (int i=0;i<n;i++){
    if(s[i]=='U')
    pos++;
    else
    pos--;
    if (pos==0&&s[i]=='U')
    res++;
    }
    cout<<res;
    return 0;


}

int main()
{
int n;
string s;
cin>>n;
cin>>s;
countingValleys(n,s);
}
